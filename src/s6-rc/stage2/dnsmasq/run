#!/bin/execlineb -P
fdmove -c 2 1
exec -c
/usr/sbin/dnsmasq --user=dnsmasq \
        --keep-in-foreground \
        --no-resolv \
        --no-poll \
        --server=8.8.8.8 \
        --server=8.8.4.4 \
        --all-servers \
        --listen-address=127.0.0.1 \
        --port=53 \
        --no-dhcp-interface \
        --pid-file=/var/run/dnsmasq.pid \
        --cache-size=500 \
        --local-service \
        --dns-loop-detect
