# package: ncurses

pkgname=ncurses
pkgver=6.0
pkgdesc="GNU console display library"
source="http://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.gz"

#_buildflags="--prefix=/usr --without-shared --with-normal --without-debug"
_buildflags="--mandir=/usr/share/man \
        --without-cxx-binding \
        --with-terminfo-dirs=/etc/terminfo:/usr/share/terminfo \
        --with-normal \
        --without-shared \
        --without-progs"

download() {
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$buildcache"
    fi
}

prepare() {
    echo
}

build() {
    cd "$_builddir"
    #CFLAGS="-O0 -fomit-frame-pointer -static" \
    ./configure $_buildflags
    make -j"${threads}"
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d /tmp/$pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1
    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgcache/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
