#!/bin/execlineb -S0

/bin/export PATH "/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

cd /

# parse and set environment
background {
    if { s6-mkdir -p /run/s6/env }
    if { s6-test -e /etc/s6/env.conf }
    redirfd -r 0 /etc/s6/env.conf
    pipeline { s6-grep -vF -- "#" }
    forstdin -nCd"\n" -- envvar
    importas -ui -D "" envvar envvar
    multidefine -d"=" $envvar { var value }
    foreground {
        redirfd -w 1 /run/s6/env/$var
        s6-echo -n -- $value
    }
}

# set environment
s6-setsid -qb --
umask 022
emptyenv -p
s6-envdir /run/s6/env

# Copy service for pid1 at the right place
foreground {
    if { s6-mkdir -p /run/s6 }
    if { s6-hiercopy /etc/s6/stage1 /run/s6/service }
    if { mkfifo -m 0600 /run/s6/service/s6-logger/fifo }
}

redirfd -r 0 /dev/null
redirfd -wnb 1 /run/s6/service/s6-logger/fifo

# Now we are good for stage2, start it
background {
    s6-setsid --
    redirfd -w 1 /run/s6/service/s6-logger/fifo
    fdmove -c 2 1
    /etc/s6/init/stage2
}

unexport !
fdmove -c 2 1
s6-svscan -st0 /run/s6/service
