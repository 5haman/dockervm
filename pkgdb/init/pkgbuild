# package: init

pkgname=init
pkgver=$version
pkgdesc="S6 init and runlevels management system for DockerVM"
url="https://github.com/5haman/dockervm"
source="pkgsrc"


download() {
		echo
}

prepare() {
		echo
}

build() {
    cd "$_builddir"
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d /tmp/$pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1

    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgcache/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
