# package: curl

pkgname=curl
pkgver=7.52.1
pkgdesc="An URL retrival utility and library"
url="http://curl.haxx.se"
source="http://curl.haxx.se/download/$pkgname-$pkgver.tar.bz2"

_buildflags="--with-ca-bundle=/etc/ssl/certs/ca-certificates.crt \
        --enable-ipv6 \
        --without-libidn \
        --without-libidn2 \
        --disable-ldap \
				--enable-static \
				--disable-shared \
				--prefix=/usr \
				CFLAGS=\"-I$lib_prefix/include\" \
				LDFLAGS=\"--static -L$lib_prefix/lib -L$lib_prefix/include\"" 

download() {
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xj -C "$buildcache"
    fi
}

prepare() {
		echo
}

build() {
    cd "$_builddir"
    ./configure $_buildflags
    make -j"${threads}"
}

package() {
    tmpdir=$(mktemp -d /tmp/$pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1

    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgcache/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
