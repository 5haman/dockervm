# package: curl

pkgname=curl
pkgver=7.52.1
pkgdesc="An URL retrival utility and library"
url="http://curl.haxx.se"
source="http://curl.haxx.se/download/$pkgname-$pkgver.tar.bz2"

_builddir="$srcdir/$pkgname-$pkgver"
_buildflags="--prefix=/usr \
	--with-ca-bundle=/etc/ssl/certs/ca-certificates.crt \
        --enable-ipv6 \
        --without-libidn \
        --without-libidn2 \
        --disable-ldap \
        --disable-shared"

download() {
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xj -C "$srcdir"
    fi
		log " => $pkgname: ${FUNCNAME[0]} OK"
}

prepare() {
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

build() {
    cd "$_builddir"
    ./configure $_buildflags
    make -j"${threads}"
		log " => $pkgname: ${FUNCNAME[0]} OK"
}

package() {
    tmpdir=$(mktemp -d $pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1

    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgdir/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
		log " => $pkgname: ${FUNCNAME[0]} OK"
}
