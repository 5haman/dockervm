# package: parted

pkgname=parted
pkgver=3.2
pkgdesc="Utility to create, destroy, resize, check and copy partitions"
url="http://www.gnu.org/software/parted/parted.html"
source="ftp://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.xz
fix-includes.patch"

_buildflags="--prefix=/usr \
	--disable-dynamic-loading \
        --disable-debug \
        --disable-nls \
	--enable-static \
        --disable-shared"

download() {
    if [ ! -d "$_builddir" ]; then
        local i
        for i in $source; do
            case $i in
                *.tar.xz) curl -sSL "$i" | tar xJ -C "$buildcache";;
                *.patch) cp "$_srcdir/patch/$i" "$_builddir/$i";;
            esac
        done
    fi
}

prepare() {
    cd "$_builddir"
    local i
    for i in $source; do
        case $i in
            *.patch) patch -p1 -i "$i" || return 1;;
        esac
    done
}

build() {
    cd "$_builddir"
    ./configure $_buildflags
    make -j"${threads}" CFLAGS='-Os -pipe' LDFLAGS='-s -static'
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d /tmp/$pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1
    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgcache/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
