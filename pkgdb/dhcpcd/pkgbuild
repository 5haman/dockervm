# package: dhcpcd

pkgname=dhcpcd
pkgver=6.11.5
pkgdesc="RFC2131 compliant DHCP client"
url="http://roy.marples.name/projects/dhcpcd/"
source="http://roy.marples.name/downloads/$pkgname/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
_buildflags="--sysconfdir=/etc \
             --mandir=/usr/share/man \
             --localstatedir=/var \
             --libexecdir=/usr/share/$pkgname \
             --dbdir=/var/lib/$pkgname"

download() {
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xJ -C "$srcdir"
    fi
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

prepare() {
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

build() {
    cd "$_builddir"
    ./configure $_buildflags
    make -j"${threads}" CFLAGS='-Os -pipe' LDFLAGS='-s -static'
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d $pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1

    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgdir/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
    log " => $pkgname: ${FUNCNAME[0]} OK"
}
