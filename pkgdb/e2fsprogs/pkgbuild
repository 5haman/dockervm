# package: e2fsprogs

pkgname=e2fsprogs
pkgver=1.43.3
pkgdesc="Standard Ext2/3/4 filesystem utilities"
url="http://e2fsprogs.sourceforge.net"
source="https://www.kernel.org/pub/linux/kernel/people/tytso/$pkgname/v$pkgver/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
_buildflags="--mandir=/usr/share/man \
             --disable-elf-shlibs \
             --disable-tls \
             --disable-nls"

download() {
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xJ -C "$srcdir"
    fi
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

prepare() {
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

build() {
    cd "$_builddir"
    ./configure $_buildflags
    make -j"${threads}" CFLAGS='-Os -pipe' LDFLAGS='-s -static'
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d $pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1

    cd $tmpdir
    # strip binary files
    sh -c "find -type f | xargs strip --strip-all &>/dev/null; exit 0"

    find | cpio -o -H newc | gzip -9 > "$pkgdir/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
    log " => $pkgname: ${FUNCNAME[0]} OK"
}
