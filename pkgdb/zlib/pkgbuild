# package: zlib

pkgname=zlib
pkgver=1.2.10
pkgdesc="A compression/decompression Library"
url="http://zlib.net"
source="http://zlib.net/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"
_buildflags="--prefix=/usr \
             --libdir=/lib \
             --static"

download() {
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$srcdir"
    fi
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

prepare() {
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

build() {
    cd "$_builddir"
    ./configure $_buildflags
    make -j"${threads}" CFLAGS='-O2'
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d $pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1

    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgdir/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
    log " => $pkgname: ${FUNCNAME[0]} OK"
}
