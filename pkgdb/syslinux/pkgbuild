# package: syslinux

pkgname=syslinux
pkgver=$version
pkgdesc=""
url=""
source="$pkgname-$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"

download() {
    cp -Ra "$workdir/$pkgname/$source" "$_builddir"
}

prepare() {
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

build() {
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d $pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1

    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgdir/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
    log " => $pkgname: ${FUNCNAME[0]} OK"
}
