# package: syslinux

pkgname=syslinux
pkgver=$version
pkgdesc="Syslinux bootloader for DockerVM"
url="https://github.com/5haman/dockervm"
source="$_srcdir/pkgsrc"

download() {
    cp -Ra "$source" "$_builddir"
}

prepare() {
    echo
}

build() {
    echo
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d /tmp/$pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1

    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgcache/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
