# package: htop

pkgname=htop
pkgver=2.0.2
pkgdesc="An interactive process viewer"
url="http://hisham.hm/htop/"
source="http://hisham.hm/htop/releases/$pkgver/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
_buildflags="--enable-static --disable-shared --disable-unicode --prefix=/usr"

download() {
    cd "$srcdir"
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$srcdir"
    fi
}

prepare() {
cd "$_builddir"
    local i
    for i in $source; do
        case $i in
        *.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
        esac
    done

}

build() {
    cd "$_builddir"
    export CFLAGS="-I/usr/include -I/usr/include/ncurses"
    export CPPFLAGS="-I/usr/include -I/usr/include/ncurses"
    export LDFLAGS="--static -lpthread -L/usr/lib -L/usr/include/ncurses -L/usr/include"
    ./configure $_buildflags
    make -j"${threads}"
}

package() {
    cd "$_builddir"
    if [ ! -f "$pkgdir/$pkgname-$pkgver.$pkgext" ]; then
        tmpdir=$(mktemp -d)
        make -j1 install DESTDIR="$tmpdir" || return 1

        cd $tmpdir
        # strip binary files
        sh -c "find -type f | xargs strip --strip-all &>/dev/null; exit 0"

        find | cpio -o -H newc | gzip -9 > "$pkgdir/$pkgname-$pkgver.$pkgext"
        rm -rf $tmpdir
    fi
}
