# package: upx

pkgname=upx
pkgver=3.91
pkgdesc="UPX is a free, portable, extendable, high-performance executable packer for several executable formats"
source="https://github.com/lalyos/docker-upx/releases/download/v3.91/upx"

download() {
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$buildcache"
    fi
}

prepare() {
    echo
}

build() {
    echo
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d $pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir/usr/bin" || return 1

    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgcache/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
