# package: bash

pkgname=bash
pkgver=4.3
pkgdesc="The GNU Bourne Again shell"
url="http://www.gnu.org/software/bash/bash.html"
source="http://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz"

_buildflags="--prefix= \
        --enable-static-link \
        --without-bash-malloc \
        --enable-readline"

download() {
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$buildcache"
    fi
}

prepare() {
    echo
}

build() {
    cd "$_builddir"
    CFLAGS="${CFLAGS} -DDEFAULT_PATH_VALUE='\"/bin\"'
    -DSTANDARD_UTILS_PATH='\"/bin\"' -DSYS_BASH_LOGOUT='\"/etc/bash/bash_logout\"'
    -DSYS_BASHRC='\"/etc/bash/bashrc\"'" \
    ./configure $_buildflags
    make -j${threads}
}

package() {
    tmpdir=$(mktemp -d $pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1
    cd $tmpdir
    find bin | cpio -o -H newc | gzip -9 > "$pkgcache/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
