# package: rng-tools

pkgname=rng-tools
pkgver=5
pkgdesc="a random number generator daemon"
url="http://sourceforge.net/projects/gkernel/"
source="http://downloads.sourceforge.net/project/gkernel/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz"

_buildflags="--enable-static --disable-shared --prefix=/usr --libexecdir=/usr/lib/rng-tools --sysconfdir=/etc --disable-silent-rules"

download() {
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$buildcache"
    fi
}

prepare() {
	echo
}

build() {
    cd "$_builddir"
    ./configure $_buildflags
    make -j"${threads}" CFLAGS='-static -static-libgcc' LDFLAGS='-static'
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d /tmp/$pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1

    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgcache/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
