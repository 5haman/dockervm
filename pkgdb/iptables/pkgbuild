# package: iptables

pkgname=iptables
pkgver=1.6.0
pkgdesc="Linux kernel firewall, NAT and packet mangling tools"
url="http://www.netfilter.org/projects/iptables/index.html"
source="http://ftp.netfilter.org/pub/iptables/$pkgname-$pkgver.tar.bz2"

_buildflags="--prefix=/usr \
        --mandir=/usr/share/man \
        --sbindir=/sbin \
        --without-kernel \
        --disable-devel \
        --disable-libipq \
        --disable-shared"

download() {
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xj -C "$buildcache"
    fi
}

prepare() {
    echo
}

build() {
    cd "$_builddir"
    export CFLAGS="$CFLAGS -D_GNU_SOURCE"
    ./configure $_buildflags
    sed -i 's|^hardcode_libdir_flag_spec=.*|hardcode_libdir_flag_spec=""|g' libtool
    sed -i 's|^runpath_var=LD_RUN_PATH|runpath_var=DIE_RPATH_DIE|g' libtool
    make -j1
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d /tmp/$pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1
    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgcache/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
