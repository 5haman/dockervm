# package: tmuxifier

pkgname=tmuxifier
pkgver=0.12.2
pkgdesc="Powerful session, window & pane management for Tmux"
url="https://github.com/jimeh/tmuxifier"
source="https://github.com/jimeh/$pkgname/archive/v$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver

download() {
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$srcdir"
    fi
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

prepare() {
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

build() {
    log " => $pkgname: ${FUNCNAME[0]} OK"
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d $pkgname.XXX)
    mkdir -p "$tmpdir/usr/share/$pkgname"
    cp -Rf bin layouts lib libexec "$tmpdir/usr/share/$pkgname"
    cp -f init.sh "$tmpdir/usr/share/$pkgname"

    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgdir/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
    log " => $pkgname: ${FUNCNAME[0]} OK"
}
