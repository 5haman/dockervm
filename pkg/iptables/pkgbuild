# pkg: iptables

pkgname=iptables
pkgver=1.6.0
pkgdesc="Linux kernel firewall, NAT and packet mangling tools"
url="http://www.netfilter.org/projects/iptables/index.html"
source="http://ftp.netfilter.org/pub/iptables/iptables-$pkgver.tar.bz2
iptables-1.6.0-musl-fixes.patch"

_builddir="$srcdir"/$pkgname-$pkgver
_buildflags="--prefix=/usr \
             --mandir=/usr/share/man \
             --disable-shared"

download() {
    cd "$srcdir"
    if [ ! -d "$_builddir" ]; then
        local i
        for i in $source; do
            case $i in
                *.tar.bz2) curl -sSL "$i" | tar xj -C "$srcdir";;
                *.patch) cp "$workdir/$pkgname/$i" "$_builddir/$i";;
            esac
        done
    fi
}

prepare() {
    cd "$_builddir"
    local i
    for i in $source; do
        case $i in
            *.patch) patch -p1 -i "$i" || return 1;;
        esac
    done
}

build() {
    cd "$_builddir"
   
    ./configure $_buildflags
    make -j1
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d)
    make -j1 install DESTDIR="$tmpdir" || return 1
    cd $tmpdir
    sh -c "find -type f | xargs strip --strip-all &>/dev/null; exit 0"
    find | cpio -o -H newc | gzip -9 > "$pkgdir/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
