# package: docker

pkgname=docker
pkgver=1.12.5
pkgdesc="Pack, ship and run any application as a lightweight container"
url="https://docker.com/"
source="https://get.docker.com/builds/Linux/x86_64/$pkgname-$pkgver.tgz"

_builddir="$srcdir"/$pkgname-$pkgver
_buildflags=""

download() {
    cd "$srcdir"
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$srcdir"
        mv $pkgname $pkgname-$pkgver
    fi
}

prepare() {
    cd "$_builddir"
    sh -c "strip --strip-all *; upx --best --ultra-brute *; exit 0"
}

build() {
    cd "$_builddir"
}

package() {
    cd "$_builddir"
    if [ ! -f "$pkgdir/$pkgname-$pkgver.$pkgext" ]; then
        tmpdir=$(mktemp -d)
        mkdir -p "$tmpdir/usr/bin/"
        install -m755 * "$tmpdir/usr/bin/"
        cd $tmpdir
        find | cpio -o -H newc | gzip -9 > "$pkgdir/$pkgname-$pkgver.$pkgext"
        rm -rf $tmpdir
    fi
}
