# package: dropbear

pkgname=dropbear
pkgver=2016.74
pkgdesc="small SSH 2 client/server designed for small memory environments"
url="http://matt.ucc.asn.au/dropbear/dropbear.html"
source="http://matt.ucc.asn.au/dropbear/releases/${pkgname}-${pkgver}.tar.bz2
        dropbear-0.53.1-static_build_fix.patch
        dropbear-options_sftp-server_path.patch"

_progs="dropbear dropbearkey dbclient dropbearconvert scp"
_builddir="$srcdir/$pkgname-$pkgver"
_buildflags="--prefix=/usr --mandir=/usr/share/man --infodir=/usr/share/info \
             --enable-shadow --disable-pam --enable-largefiles --with-zlib \
             --disable-lastlog --disable-utmp --disable-utmpx --disable-wtmp --disable-wtmpx \
             --disable-pututline --disable-pututxline"

download() {
    cd "$srcdir"
    if [ ! -d "$_builddir" ]; then
        local i
        for i in $source; do
            case $i in
                *.tar.bz2) curl -sSL "$i" | tar xj -C "$srcdir";;
                *.patch) cp "$workdir/$pkgname/$i" "$_builddir/$i";;
            esac
        done
    fi
}

prepare() {
    cd "$_builddir"
    local i
    for i in $source; do
        case $i in
            *.patch) patch -p1 -i "$i" || return 1;;
        esac
    done
}

build() {
    cd "$_builddir"

    ./configure $_buildflags

    make -j"${threads}" PROGRAMS="$_progs" STATIC=1
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d)
    make -j1 install DESTDIR="$tmpdir" PROGRAMS="$_progs" STATIC=1 || return 1

    cd $tmpdir
    # strip binary files
    sh -c "find -type f | xargs strip --strip-all &>/dev/null; exit 0"
    cd usr/bin
    ln -s dbclient ssh

    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgdir/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
