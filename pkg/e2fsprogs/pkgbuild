# pkg: 

pkgname=
pkgver=
pkgdesc=""
url=""
source=""

_builddir="$srcdir"/$pkgname-$pkgver
_buildflags="--enable-static-libc"

download() {
    cd "$srcdir"
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$srcdir"
    fi
}

prepare() {
cd "$_builddir"
    local i
    for i in $source; do
        case $i in
        *.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
        esac
    done

}

build() {
    cd "$_builddir"
    ./configure "$_buildflags"
    make -j"${threads}"
}

package() {
    cd "$_builddir"
    make -j1 install DESTDIR="$pkgdir" || return 1
}
