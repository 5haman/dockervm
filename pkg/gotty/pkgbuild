# pkg: gotty

pkgname=gotty
pkgver=
pkgdesc=""
url="https://github.com/yudai/gotty/"
source="https://github.com/yudai/gotty/releases/download/pre-release/$pkgname_linux_amd64.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
_buildflags=""

download() {
    cd "$srcdir"
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$srcdir"
    fi
}

prepare() {
cd "$_builddir"
    local i
    for i in $source; do
        case $i in
        *.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
        esac
    done

}

build() {
    cd "$_builddir"
    ./configure "$_buildflags"
    make -j"${threads}"
}

package() {
    cd "$_builddir"
    make -j1 install DESTDIR="$pkgdir" || return 1
}
