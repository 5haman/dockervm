# pkg: upx

pkgname=upx
pkgver=3.91
pkgdesc="UPX is a free, portable, extendable, high-performance executable packer for several executable formats"
source="https://github.com/lalyos/docker-upx/releases/download/v3.91/upx"

_builddir="$srcdir/$pkgname-$pkgver"
_buildflags=""

download() {
    cd "$srcdir"
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$srcdir"
    fi
}

prepare() {
    cd "$_builddir"
}

build() {
    cd "$_builddir"
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d)
    make -j1 install DESTDIR="$tmpdir/usr/bin" || return 1
    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgdir/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
