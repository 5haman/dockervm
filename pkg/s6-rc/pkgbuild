# pkg: s6-rc

pkgname=s6-rc
pkgver=0.1.0.0
pkgdesc="A service manager for s6-based systems."
url="http://skarnet.org/software/s6-rc/"
source="http://skarnet.org/software/$pkgname/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
_buildflags="--enable-static-libc"

download() {
    cd "$srcdir"
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$srcdir"
    fi
}

prepare() {
    cd "$_builddir"
    local i
    for i in $source; do
        case $i in
        *.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
        esac
    done
}

build() {
    cd "$_builddir"
    ./configure $_buildflags
    make -j"${threads}"

    # strip binary files
    sh -c "find -executable -type f | xargs strip --strip-all &>/dev/null; exit 0"
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d)
    make -j1 install DESTDIR="$tmpdir" || return 1
    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgdir/$pkgname-$pkgver.pkg"
    rm -rf $tmpdir
}
