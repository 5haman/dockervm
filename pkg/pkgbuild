# pkg:  

pkgname=
pkgver=
pkgdesc=""
source=""

_builddir="$srcdir/$pkgname-$pkgver"
_buildflags="--mandir=/usr/share/man \
             --disable-elf-shlibs \
             --disable-tls \
             --disable-nls"

download() {
    cd "$srcdir"
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$srcdir"
    fi
}

prepare() {
    cd "$_builddir"
    local i
    for i in $source; do
        case $i in
        *.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
        esac
    done
}

build() {
    cd "$_builddir"
    ./configure $_buildflags
    make -j"${threads}" CFLAGS='-Os -pipe' LDFLAGS='-s -static'
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d)
    make -j1 install DESTDIR="$tmpdir" || return 1
    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgdir/$pkgname-$pkgver.pkg"
    rm -rf $tmpdir
}
