fdmove -c 2 1
foreground {
	if { s6-mkdir -p -m 0755 /sys/fs/cgroup }
	if { s6-mount -wt tmpfs -o noexec,nosuid,nodev,noatime cgroup /sys/fs/cgroup }
	redirfd -r 0 /proc/cgroups
	pipeline { s6-tail -n +2 }
	pipeline { s6-cut -d"\t" -f1 }
	pipeline { s6-grep -vF -- devices }
	forstdin -d"\n" -- i
	importas -u -D "" i i
	if { s6-mkdir /sys/fs/cgroup/${i} }
	s6-mount -t cgroup -o ${i},noatime,nodev,noexec,nosuid -- cgroup /sys/fs/cgroup/${i}
}
