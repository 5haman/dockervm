# package: util-linux

pkgname=util-linux
pkgver=2.28.2
case $pkgver in
    *.*.*) _v=${pkgver%.*};;
    *.*) _v=$pkgver;;
esac
pkgdesc="Random collection of Linux utilities"
url="http://git.kernel.org/cgit/utils/util-linux/util-linux.git"
source="http://www.kernel.org/pub/linux/utils/$pkgname/v${_v}/$pkgname-$pkgver.tar.xz"

_buildflags="--prefix=/usr \
	--enable-static
	--disable-shared \
        --without-ncurses \
        --without-python \
        --disable-nls \
        --disable-tls \
        --enable-blkid \
        --disable-all-programs"

download() {
    if [ ! -d "$_builddir" ]; then
         curl -sSL "$source" | tar xJ -C "$buildcache"
    fi
}

prepare() {
    cd "$_builddir"
    cp "$_srcdir"/ttydefaults.h include/
    libtoolize --force && aclocal -I m4 && autoconf && automake --add-missing
}

build() {
    cd "$_builddir"
    ./configure $_buildflags
    make -j"${threads}"
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d /tmp/$pkgname.XXX)
    make -j1 install DESTDIR="$tmpdir" || return 1
    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgcache/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
