# package: xfsprogs

pkgname=xfsprogs
pkgver=4.5.0
pkgdesc="XFS filesystem utilities"
url="http://oss.sgi.com/projects/xfs/"
source="ftp://oss.sgi.com/projects/xfs/cmd_tars/$pkgname-$pkgver.tar.gz"

_buildflags="--prefix=/usr \
	--enable-static=yes \
	--enable-shared=no \
	--enable-blkid=no \
	--enable-lib64=no \
	--enable-termcap=no \
        --sbindir=/sbin \
        --libexecdir=/usr/lib \
        --enable-gettext=no"

download() {
    if [ ! -d "$_builddir" ]; then
        curl -sSL "$source" | tar xz -C "$buildcache"
    fi
}

prepare() {
    cp -vf "$_srcdir/musl-fixes.patch" "$_builddir"
    cd "$_builddir"
    patch -p1 -i "./musl-fixes.patch" || return 1
}

build() {
    cd "$_builddir"
    export DEBUG=-DNDEBUG
    export OPTIMIZER="$CFLAGS"

    ./configure $_buildflags
    make -j"${threads}" SHELL=/bin/bash
}

package() {
    cd "$_builddir"
    tmpdir=$(mktemp -d /tmp/$pkgname.XXX)
    make -j1 DIST_ROOT="$tmpdir" install

    cd $tmpdir
    find | cpio -o -H newc | gzip -9 > "$pkgcache/$pkgname-$pkgver.$pkgext"
    rm -rf $tmpdir
}
