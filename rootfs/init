#!/bin/execlineb -S0
#
# Early init stage
# Init modules and set system params
# then switch root and run stage1

/bin/cd /
/bin/export PATH "/usr/sbin:/usr/bin:/sbin:/bin"

umask 022

# load modules
foreground {
    if { s6-test -e /etc/modules }
    redirfd -r 0 /etc/modules
    pipeline { s6-grep -vF -- "#" }
    forstdin -nCd"\n" -- mod
    importas -ui -D "" mod mod
    modprobe -ab $mod
}

# mount filesystems
if { s6-mount -a }
if { /etc/s6/init/overlay }
exec -c
/bin/busybox switch_root /newroot /etc/s6/init/stage1
